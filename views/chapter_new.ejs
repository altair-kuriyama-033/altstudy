<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>章作成</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <main class="container">
      <h1>章の作成</h1>
      <% if (error) { %>
        <p class="error"><%= error %></p>
      <% } %>
      <form method="post" action="/chapters/new" class="card">
        <label>章タイトル</label>
        <input type="text" name="title" value="<%= values.title %>" required />

        <label>章の説明</label>
        <textarea name="description"><%= values.description %></textarea>

        <h2>問題1</h2>
        <label>問題文</label>
        <textarea name="questionText" required></textarea>
        <label>A</label>
        <input type="text" name="optionA" required />
        <label>B</label>
        <input type="text" name="optionB" required />
        <label>C</label>
        <input type="text" name="optionC" required />
        <label>D</label>
        <input type="text" name="optionD" required />
        <label>正解</label>
        <select name="correctChoice" required>
          <option value="A">A</option>
          <option value="B">B</option>
          <option value="C">C</option>
          <option value="D">D</option>
        </select>

        <h2>問題2（任意）</h2>
        <label>問題文</label>
        <textarea name="questionText"></textarea>
        <label>A</label>
        <input type="text" name="optionA" />
        <label>B</label>
        <input type="text" name="optionB" />
        <label>C</label>
        <input type="text" name="optionC" />
        <label>D</label>
        <input type="text" name="optionD" />
        <label>正解</label>
        <select name="correctChoice">
          <option value="">選択してください</option>
          <option value="A">A</option>
          <option value="B">B</option>
          <option value="C">C</option>
          <option value="D">D</option>
        </select>

        <button type="submit">登録する</button>
      </form>
      <p><a href="/chapters">一覧に戻る</a></p>
    </main>
  </body>
</html>
