<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= chapter.title %> - ランキング</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <main class="container">
      <h1><%= chapter.title %> のランキング</h1>
      <table class="card table">
        <thead>
          <tr>
            <th>順位</th>
            <th>ユーザー</th>
            <th>正答数</th>
            <th>更新日時</th>
          </tr>
        </thead>
        <tbody>
          <% rankings.forEach((item, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= item.display_name %></td>
              <td><%= item.correct_count %></td>
              <td><%= item.updated_at %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="row gap">
        <a href="/chapters" class="button">章一覧へ</a>
        <a href="/chapters/<%= chapter.id %>/quiz" class="button secondary">もう一度挑戦</a>
      </div>
    </main>
  </body>
</html>
